  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "text/*": [".txt", ".md"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+nangliang",
      "url": "/?action=%s"
    }
  ],
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate",
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "image/jpeg",
            "image/png",
            "image/gif",
            "image/webp",
            "text/plain",
            "application/pdf"
          ]
        }
      ]
    }
  },
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "user_preferences": {
    "color_scheme_dark": {
      "theme_color": "#1a1a1a",
      "background_color": "#000000"
    },
    "color_scheme_light": {
      "theme_color": "#c41e3a",
      "background_color": "#ffffff"
    }
  },
  
  "permissions": [
    "camera",
    "microphone",
    "geolocation",
    "notifications",
    "persistent-storage"
  ],
  
  "features": [
    "cross-origin-isolated"
  ],
  
  "id": "nangliang-revolutionary-memorial",
  
  "note": "南梁革命纪念馆PWA应用清单文件 - 支持离线访问、推送通知、文件分享等功能"
